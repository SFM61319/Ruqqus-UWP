<Application
    x:Class="Ruqqus.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ruqqus">

    <!-- Change the default SystemAccentColor to `Porpl` (#ff805ad5) -->
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Porpl">#FF805AD5</Color>
            <Color x:Key="SystemAccentColor">#FF805AD5</Color>
            <ColorPaletteResources x:Key="Default"
                                   Accent="{ThemeResource SystemAccentColor}" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
