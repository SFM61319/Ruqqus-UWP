<Application
    x:Class="Ruqqus.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ruqqus">

    <!-- Change the default SystemAccentColor to `Porpl` (#ff805ad5) -->
    <Application.Resources>
        <Color x:Key="SystemAccentColor">#ff805ad5</Color>
        <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="#ff805ad5" />
    </Application.Resources>

</Application>
